            //-       p.list-group-item-text
            //-         p {{item.author}}
            //-         p {{item.title}}
            //-         span.inline.right 3.10
            div
              table.table.table-hover
                tr
                  //- th
                  th Song
                  th Duration
                  //- th Added By
                  //- th Added Date
                  //- th url
                  th Source
                tr(ng-repeat='item in playlist.content | orderBy:sortingOrder:reverse')
                  //- td
                  //-   button.btn(type='button')
                  //-     span.glyphicon.glyphicon-play
                  td
                    a  {{item.title}} - {{item.artist}}
                  td.
                    3:10
                  //- td {{item.addedBy}}
                  //- td {{item.addedDate}}
                  //- td {{item.url}}
                  td
                    a(href='{{item.url}}') {{item.service}}
              button.btn.btn-success.pull-right(type="button" ng-click="savePlaylist()")
                span.glyphicon.glyphicon-ok  Save

